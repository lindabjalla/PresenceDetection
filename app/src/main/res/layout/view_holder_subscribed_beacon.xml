<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TableRow
        android:layout_weight="3"
        android:padding="1dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMystic"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/label_alias_name"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subscribed_beacon_alias_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorEggshell"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp"
            tools:text="my beacon" />

    </TableRow>

    <TableRow
        android:layout_weight="3"
        android:padding="1dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMystic"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/label_since"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_of_subscription"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorEggshell"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp"
            tools:text="28 July 2016" />

    </TableRow>

    <TableRow
        android:layout_weight="3"
        android:padding="1dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMystic"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/label_status"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subscribed_beacons_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorEggshell"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp"
            tools:text="in range" />

    </TableRow>

    <TableRow
        android:layout_weight="3"
        android:padding="1dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMystic"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/label_uuid"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subscribed_beacons_uuid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorEggshell"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp"
            tools:text="uuid" />

    </TableRow>

    <TableRow
        android:layout_weight="3"
        android:padding="1dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMystic"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/label_major"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subscribed_beacons_major"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorEggshell"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp"
            tools:text="10" />

    </TableRow>

    <TableRow
        android:layout_weight="3"
        android:padding="1dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMystic"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/label_minor"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subscribed_beacons_minor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorEggshell"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorDimGray"
            android:textSize="20sp"
            tools:text="30" />

    </TableRow>

</TableLayout>